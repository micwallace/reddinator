<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
    <style name="Reddit" parent="android:Theme.Light">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RedditDark" parent="android:Theme.Light">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AndroidHolo" parent="android:Theme.Holo">
        <item name="android:background">@android:drawable/screen_background_dark_transparent</item>
    </style>
    <style name="AndroidHoloLight" parent="android:Theme.Holo.Light">
        <item name="android:background">@android:drawable/screen_background_light_transparent</item>
    </style>

</resources>